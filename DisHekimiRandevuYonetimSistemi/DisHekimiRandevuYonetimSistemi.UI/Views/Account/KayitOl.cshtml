<h2> KAYIT OL </h2>
<form asp-controller="Account" asp-action="KayitOl" method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" name="adSoyad">
    </div>
    <div class="form-group">
        <label>Telefon Numarası</label>
        <input type="tel" name="telefonNumarasi">
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email">
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" name="sifre">
    </div>
    <button type="submit" class="btn-outline-primary">Kayıt Ol</button>
</form>
