<h2> GİRİŞ YAP </h2>
@if(ViewBag.Hata!=null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}
<form asp-controller="Account" asp-action="GirisYap" method="post">
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" name="email">
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" name="sifre">
    </div>
    <button type="submit" class="btn-outline-primary">Giriş Yap</button>
</form>
